{
  "tasks": {
    "start": "deno run --unstable -A --watch=static/,routes/ dev.ts",
    "prettier": "deno run --allow-read --allow-write https://denolib.com/denolib/prettier/main.ts",
    "lint": "deno lint ./components ./data ./utils ./routes ./islands",
    "esm:add": "deno run -A https://esm.sh/v103 add",
    "esm:update": "deno run -A https://esm.sh/v103 update",
    "esm:remove": "deno run -A https://esm.sh/v103 remove"
  },
  "importMap": "./import_map.json",
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}

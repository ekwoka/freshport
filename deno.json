{
  "tasks": {
    "start": "deno run --unstable --reload -A --watch=static/,routes/ dev.ts",
    "prettier": "deno run --allow-read --allow-write https://denolib.com/denolib/prettier/main.ts",
    "lint": "deno lint ./components ./data ./utils ./routes ./islands",
    "npm:add": "deno run -A https://esm.sh/v94 add",
    "npm:update": "deno run -A https://esm.sh/v94 update",
    "npm:remove": "deno run -A https://esm.sh/v94 remove"
  },
  "importMap": "./import_map.json",
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}